<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/cl_full"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cgl_apps_image_start"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.05"
    />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cgl_apps_texts_start"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cgl_end"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cgl_text_end"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/cgl_apps_image_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintDimensionRatio="1:1"
        android:id="@+id/iv_app_icon"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_app_name"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/cgl_text_end"
        app:layout_constraintStart_toEndOf="@+id/cgl_apps_texts_start"
        app:layout_constraintTop_toTopOf="@+id/iv_app_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_app_size"
        android:textColor="#EE4848"
        app:layout_constraintStart_toEndOf="@+id/cgl_apps_texts_start"
        app:layout_constraintBottom_toBottomOf="@+id/iv_app_icon"
        />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mcb_delete_apps"
        app:buttonTint="@color/checkbox_background"
        app:layout_constraintTop_toTopOf="@+id/iv_app_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_app_icon"
        app:layout_constraintEnd_toStartOf="@+id/cgl_end"

        />
</androidx.constraintlayout.widget.ConstraintLayout>