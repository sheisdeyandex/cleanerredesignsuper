<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#0C1427"
        app:layout_constraintHeight_percent="0.08"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/energy_saving"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
    </com.google.android.material.card.MaterialCardView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cgl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cgl_modes_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0833" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cgl_modes_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cgl_modes_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.383" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cgl_modes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
android:id="@+id/ypview_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cgl_top"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintDimensionRatio="1:1"
        />
        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/crpv_progress"
            android:layout_width="0dp"
            android:layout_height="0dp"
           app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cgl_top"
            app:progress_start_color="#EE4856"
            app:progress_end_color="#EE4856"
            app:layout_constraintWidth_percent="0.7"
            app:progress_style="line"
            app:line_width="@dimen/_15sdp"
            app:line_count="100"
            app:progress_text_color="@android:color/transparent"
            />
    <com.yangp.ypwaveview.YPWaveView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:animatorEnable="true"
        app:textHidden="true"
        android:background="@drawable/ypview_main_background"

        app:layout_constraintStart_toStartOf="@+id/ypview_view"
        app:layout_constraintEnd_toEndOf="@+id/ypview_view"
        app:layout_constraintWidth_percent="0.62"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@+id/ypview_view"
        app:layout_constraintBottom_toBottomOf="@+id/ypview_view"
        app:shapeType="circle"
        android:id="@+id/yw_view"
        app:borderColor="@color/ypviewfrontcolor"
        app:frontColor="@color/ypviewfrontcolor"
        app:behideColor="@color/ypviewbehindcolor"
        app:borderWidthSize="0dp"
        style="@style/ypviewcolor"
        app:max="100"
        app:progress="59"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@+id/yw_view"
    app:layout_constraintEnd_toEndOf="@+id/yw_view"
    app:layout_constraintTop_toTopOf="@+id/yw_view"
    app:layout_constraintBottom_toBottomOf="@+id/yw_view"
    android:id="@+id/tv_energy_percent"
    android:textSize="36sp"
    android:textColor="@color/white"
    />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_work_time_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
             android:src="@drawable/ic_low_battery"
                />
            <TextView
                android:layout_width="wrap_content"
android:layout_gravity="center"
                android:textColor="#01DEC4"
                android:textSize="24sp"
                android:layout_marginStart="10dp"
                android:id="@+id/tv_work_time"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/yw_view"
        app:layout_constraintBottom_toTopOf="@+id/cl_modes_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="#E0E2FA"

        android:textSize="12sp"
        android:text="@string/work_left_time"
        android:id="@+id/tv_work_time_text"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/cl_modes_start"
        app:layout_constraintBottom_toTopOf="@+id/cgl_modes"
        app:layout_constraintStart_toEndOf="@+id/cgl_modes_start"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/v_normal_mode"
            app:layout_constraintHeight_percent="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="#01DEC4"
>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        android:layout_gravity="center"
                android:text="@string/normal_mode"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textColor="@color/white"
                />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cgl_modes"
  app:layout_constraintStart_toStartOf="@+id/cl_modes_start"
        app:layout_constraintEnd_toEndOf="@+id/cl_modes_end"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/v_ultra_mode"
            app:layout_constraintHeight_percent="0.65"
            app:cardBackgroundColor="#0174DE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_gravity="center"
                android:text="@string/ultra_mode"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textColor="@color/white"
                />
        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cgl_modes"
android:id="@+id/cl_modes_end"
        app:layout_constraintEnd_toStartOf="@+id/cgl_modes_end"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1:1">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/v_extreme_mode"
            app:layout_constraintHeight_percent="0.65"
            app:cardBackgroundColor="#0124DE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_gravity="center"
                android:text="@string/extreme_mode"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textColor="@color/white"
                />
        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>